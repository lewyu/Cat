<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_item_article_image"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/list_item_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_article_image"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="20dp"
        tools:text="Title"/>
    <TextView
        android:id="@+id/list_item_article_date"
        android:layout_below="@id/list_item_article_title"
        android:layout_toRightOf="@+id/list_item_article_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="17dp"
        tools:text="Date"/>

</RelativeLayout>